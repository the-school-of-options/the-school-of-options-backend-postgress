{
    "name": "the-school-of-options-backend",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "pm2 start index.ts --name the-school-of-options-backend --max-memory-restart 4144M --max-restarts 7",
        "restart": "pm2 restart the-school-of-options-backend",
        "build": "tsc",
        "dev": "nodemon --exec tsx src/index.ts",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "typeorm": "ts-node ./node_modules/typeorm",
        "generate-migration": "npx typeorm-ts-node-esm migration:generate ./src/migrations/AutoGenerated -d ./src/config/database.ts",
        "migrate-down": "npx typeorm-ts-node-esm migration:revert -d ./src/config/database.ts",
        "create-migration": "npx typeorm-ts-node-esm migration:create ./src/migrations/migration",
        "migrate-status": "npx typeorm-ts-node-esm migration:show -d ./src/config/database.ts",
        "migrate-fresh": "npm run migrate-down && npm run migrate-up",
        "db-reset": "npm run migrate-down && npm run migrate-up",
        "migrate-up": "npx typeorm-ts-node-esm migration:run -d ./src/config/database.ts",
        "dev-migrate-up": "yarn run build && npx typeorm-ts-node-esm migration:run -d ./dist/src/config/database.ts",
        "dev-migrate-down": "yarn run build && npx typeorm-ts-node-esm migration:revert -d ./dist/src/config/database.ts"
    },
    "dependencies": {
        "@aws-sdk/client-cognito-identity-provider": "^3.883.0",
        "@aws-sdk/client-ses": "^3.883.0",
        "@aws-sdk/client-sesv2": "^3.614.0",
        "aws-jwt-verify": "^5.1.0",
        "axios": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.12.0",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.10",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.5.4"
    }
}